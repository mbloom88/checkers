extends Sprite

# Pointer
var is_active = false setget , get_is_active

################################################################################
# PRIVATE METHODS
################################################################################

func _ready():
	deactivate()

################################################################################
# PUBLIC METHODS
################################################################################

func activate():
	visible = true
	is_active = true

################################################################################

func deactivate():
	visible = false
	is_active = false

################################################################################
# GETTERS
################################################################################

func get_is_active():
	return is_active
